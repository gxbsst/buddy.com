<ul>
  <% if ::Refinery::Interviews::Admin::InterviewsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.interviews_admin_interviews_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_interviews_admin_interview_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Interviews::Admin::InterviewsController.sortable? && ::Refinery::Interviews::Interview.any? %>
  <li>
    <%= link_to t('.reorder', :what => "Interviews"),
                 refinery.interviews_admin_interviews_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Interviews"),
                 refinery.interviews_admin_interviews_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
