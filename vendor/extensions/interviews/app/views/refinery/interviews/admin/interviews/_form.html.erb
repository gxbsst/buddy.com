<%= form_for [refinery, :interviews_admin, @interview] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @interview,
              :include_object_name => true %>

  
  <div class='field'>
    <%= f.label :people_name -%>
    <%= f.text_field :people_name, :class => 'larger widest'  -%>

  </div>
  
  <div class='field'>
    <%= f.label :title -%>
    <%= f.text_field :title  -%>

  </div>
  
  <div class='field'>
    <%= f.label :time -%>
    <%= f.date_select :time  -%>

  </div>
  
  <div class='field'>
    <div id='page-tabs' class='clearfix ui-tabs ui-widget ui-widget-content ui-corner-all'>
      <ul id='page_parts'>
        <% [:content].each_with_index do |part, part_index| %>
          <li class='ui-state-default<%= ' ui-state-active' if part_index == 0 %>'>
            <%= link_to t("#{part}", :scope => "activerecord.attributes.refinery/interviews/interview", :default => part.to_s.titleize), "##{part}" %>
          </li>
        <% end %>
      </ul>
      <div id='page_part_editors'>
        <% [:content].each do |part| %>
          <div class='page_part' id='<%= part %>'>
            <%= f.text_area part, :rows => 20, :class => 'wymeditor widest' -%>
          </div>
        <% end %>
      </div>
    </div>

  </div>
  
  <div class='field'>
    <%= f.label :photo -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :photo_id,
               :image => @interview.photo,
               :toggle_image_display => false %>

  </div>
  
  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.interviews.admin.interviews.interview'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @interview.people_name) %>
<% end -%>
<% content_for :javascripts do %>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');
    });
  </script>
<% end %>
