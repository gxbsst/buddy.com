<% content_for :body_content_title do %>
  <%= @interview.people_name %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>People Name</h1>
    <p>
      <%=raw @interview.people_name %>
    </p>
  </section>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @interview.title %>
    </p>
  </section>
  <section>
    <h1>Time</h1>
    <p>
      <%=raw @interview.time %>
    </p>
  </section>
  <section>
    <h1>Content</h1>
    <p>
      <%=raw @interview.content %>
    </p>
  </section>
  <section>
    <h1>Photo</h1>
    <p>
      <%= image_fu @interview.photo, nil %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="interviews">
      <% @interviews.each do |interview| %>
        <li>
          <%= link_to interview.people_name, refinery.interviews_interview_path(interview) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
